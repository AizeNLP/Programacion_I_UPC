#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace System;
using namespace std;

int Cal(int x)
{
	int c;
	if (x < 5) c = 1000;
	else if (x >= 5 && x<=10 ) c = 2000;
	else  c = 3000;

	return c;
}

int main()
{
	system("color 9f");

	int t,cos;

	cout << "Ingrese tiempo de servicio: ";
	cin >> t;
	
	cos = Cal(t);

	cout << "El monto de aumento es: " << cos << endl;
 	
    _getch();
	return 0;
}


